 20, 120, 360, 30, "Delete source file (default sync behavier)")                        \frm_src_not_exist = FrameGadget(#PB_Any, 410, 10, 380, 150, "Source file didn't exist")            \opt_src_ne_nothing = OptionGadget(#PB_Any, 420, 40, 360, 30, "Do nothing")            \opt_src_ne_cpy_dst = OptionGadget(#PB_Any, 420, 80, 360, 30, "Copy destination file (default sync behavier)")            \opt_src_ne_del_dst = OptionGadget(#PB_Any, 420, 120, 360, 30, "Delete destination file (default backup behavier)")                        \txt_src_date_not_eqal = TextGadget(#PB_Any, 10, 180, 780, 30, "The date/time of the source and destinations file aren't equal", #PB_Text_Center)                        \frm_src_date_newer = FrameGadget(#PB_Any, 10, 210, 380, 150, "Source is newer than destination file")            \opt_src_dn_nothing = OptionGadget(#PB_Any, 20, 240, 360, 30, "Do nothing")            \opt_src_dn_cpy_src = OptionGadget(#PB_Any, 20, 280, 360, 30, "Copy source file (default backup behavier)")                        \frm_src_date_older = FrameGadget(#PB_Any, 410, 210, 380, 150, "Source is older than destination file")            \opt_src_do_nothing = OptionGadget(#PB_Any, 420, 240, 360, 30, "Do nothing (default backup behavier)")            \opt_src_do_cpy_src = OptionGadget(#PB_Any, 420, 280, 360, 30, "Copy source file")            \opt_src_do_cpy_dst = OptionGadget(#PB_Any, 420, 320, 360, 30, "Copy destination file (default sync behavier)")                        \btn_ok = ButtonGadget(#PB_Any, 410, 375, 160, 30, "Ok")            \btn_cancel = ButtonGadget(#PB_Any, 630, 375, 160, 30, "Cancel")                        Select *s\src_not_exist                Case #APP_COPY_DST_COPY : SetGadgetState(\opt_src_ne_cpy_dst, 1)                Case #APP_COPY_DST_DEL  : SetGadgetState(\opt_src_ne_del_dst, 1)                Default                 : SetGadgetState(\opt_src_ne_nothing, 1)            EndSelect                        Select *s\dst_not_exist                Case #APP_COPY_SRC_COPY : SetGadgetState(\opt_dst_ne_cpy_src, 1)                Case #APP_COPY_SRC_DEL  : SetGadgetState(\opt_dst_ne_del_src, 1)                Default                 : SetGadgetState(\opt_dst_ne_nothing, 1)            EndSelect                        Select *s\src_is_newer                Case #APP_COPY_SRC_COPY : SetGadgetState(\opt_src_dn_cpy_src, 1)                Default                 : SetGadgetState(\opt_src_dn_nothing, 1)            EndSelect                        Select *s\src_is_older                Case #APP_COPY_SRC_COPY : SetGadgetState(\opt_src_do_cpy_src, 1)                Case #APP_COPY_DST_COPY : SetGadgetState(\opt_src_do_cpy_dst, 1)                Default                 : SetGadgetState(\opt_src_do_nothing, 1)            EndSelect                    Else            err("can't create config window.")            ProcedureReturn 0        EndIf            EndWith        ProcedureReturn *w\id    EndProcedure; IDE Options = PureBasic 6.04 LTS (Windows - x64); CursorPosition = 92; FirstLine = 58; Folding = -; Optimizer; EnableXP; EnablePurifier; EnableCompileCount = 0; EnableBuildCount = 0; EnableExeConstant